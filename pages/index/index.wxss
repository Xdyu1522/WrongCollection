/**index.wxss**/
page {
  --primary-color: #22c55e;
  --secondary-color: #16a34a;
  --bg-color: #f9fafb;
  --text-color: #333333;
  height: 100%;
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.container {
  padding: 16rpx;
  box-sizing: border-box;
  color: var(--text-color);
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 欢迎区域 */
.welcome-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  margin-top: 20rpx;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
}

.welcome-subtitle {
  font-size: 26rpx;
  color: #6b7280;
}

.avatar-container {
  width: 80rpx;
  height: 80rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 80rpx !important;
  height: 80rpx !important;
  border-radius: 50%;
  overflow: hidden;
  margin: 0;
  background: none;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

button.avatar-wrapper::after {
  border: none;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.stats-title {
  color: #6b7280;
  margin-bottom: 24rpx;
  font-size: 28rpx;
}

.stats-content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
  width: 100%;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-number {
  font-size: 56rpx;
  font-weight: bold;
  color: var(--primary-color);
  line-height: 1.2;
}

.stats-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

.progress-bar-bg {
  width: 100%;
  height: 12rpx;
  background-color: #e5e7eb;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 12rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* 学科标签 */
.subject-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  color: #6b7280;
  font-size: 28rpx;
}

.view-all {
  font-size: 24rpx;
  color: var(--primary-color);
}

.subject-tags {
  display: flex;
  flex-wrap: wrap;
}

.subject-tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  background-color: rgba(34, 197, 94, 0.1);
  color: var(--primary-color);
  border: 2rpx solid rgba(34, 197, 94, 0.2);
}

/* 快捷功能 */
.features-section {
  margin-bottom: 48rpx;
}

.feature-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.feature-icon {
  width: 96rpx;
  height: 96rpx;
  background: rgba(34, 197, 94, 0.1);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  color: var(--primary-color);
  font-size: 48rpx;
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 30rpx;
  font-weight: 500;
}

.feature-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.feature-arrow {
  color: #d1d5db;
  font-size: 28rpx;
}

/* 最近错题 */
.recent-section {
  margin-bottom: 140rpx;
}

.recent-list {
  background: white;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.recent-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.recent-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
}

.recent-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.recent-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.recent-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
  max-width: fit-content;
}

.status-review {
  background-color: rgba(34, 197, 94, 0.1);
  color: var(--primary-color);
}

.status-pending {
  background-color: rgba(251, 191, 36, 0.1);
  color: #d97706;
}

.status-unmastered {
  background-color: rgba(239, 68, 68, 0.1);
  color: #dc2626;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(34, 197, 94, 0.4);
  font-size: 48rpx;
  color: white;
  z-index: 1000;
}

/* 调试按钮 */
.debug-btn {
  position: fixed;
  left: 40rpx;
  bottom: 80rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 99;
  font-size: 24rpx;
  color: #64748b;
}

.debug-btn-weekly {
  position: fixed;
  left: 40rpx;
  bottom: 180rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 99;
  font-size: 24rpx;
  color: #64748b;
}

.stats-separator {
  width: 2rpx;
  height: 60rpx;
  background-color: #e5e7eb;
  margin: 10rpx 0;
  align-self: center;
}

.progress-container {
  width: 100%;
}
