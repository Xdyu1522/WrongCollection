.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0;
  text-align: center;
}

.stats-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 15rpx;
}

.stats-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stats-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.mastered {
  color: #07c160;
}

.reviewing {
  color: #ff9500;
}

.unmastered {
  color: #ff3b30;
}

.chart-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #07c160;
}

.mastery-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.mastery-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.mastery-name {
  width: 120rpx;
  font-size: 26rpx;
  color: #666;
}

.progress-container {
  flex: 1;
  height: 30rpx;
  background-color: #f1f1f1;
  border-radius: 15rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  transition: width 0.5s ease;
}

.mastery-item:nth-child(1) .progress-bar {
  background-color: #07c160;
}

.mastery-item:nth-child(2) .progress-bar {
  background-color: #ff9500;
}

.mastery-item:nth-child(3) .progress-bar {
  background-color: #ff3b30;
}

.mastery-value {
  width: 80rpx;
  font-size: 26rpx;
  font-weight: bold;
  text-align: right;
}

.subject-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.subject-item {
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 15rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.subject-name {
  font-size: 26rpx;
  color: #666;
}

.subject-value {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 600rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.no-data-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 600rpx;
}

.no-data-text {
  font-size: 32rpx;
  color: #999;
  text-align: center;
  padding: 0 40rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式调整 */
@media (min-width: 768px) {
  .stats-card {
    display: flex;
    justify-content: space-around;
  }
}