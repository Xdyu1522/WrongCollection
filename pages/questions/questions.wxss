/**questions.wxss**/
page {
  --primary-color: #22c55e;
  --secondary-color: #16a34a;
  --bg-color: #f9fafb;
  --text-color: #333333;
  --text-light: #666666;
  --border-color: #f0f0f0;
  --danger-color: #ef4444;
  background: var(--bg-color);
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: 0; /* 确保容器顶部没有额外内边距 */
}

/* 搜索栏 */
.search-bar {
  position: relative;
  padding: 24rpx 32rpx;
  background: #ffffff;
  margin-bottom: 0;
  border-bottom: 1rpx solid var(--border-color);
}

.search-input {
  width: 100%;
  height: 72rpx;
  padding: 0 80rpx;
  background: var(--bg-color);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

.search-icon {
  position: absolute;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #9ca3af;
  font-size: 32rpx;
}

/* 筛选部分 */
.filter-section {
  background: #ffffff;
  border-bottom: 1rpx solid var(--border-color);
  padding-bottom: 16rpx;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  padding: 16rpx 32rpx;
  white-space: nowrap;
  width: 100%;
  box-sizing: border-box;
}

.filter-tab {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  margin-right: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
  border: 1rpx solid #e5e7eb;
  flex-shrink: 0;
  min-width: 100rpx;
  text-align: center;
}

.filter-tab.active {
  background: var(--primary-color);
  color: #ffffff;
  border-color: var(--primary-color);
}

/* 排序选项 */
.sort-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 32rpx;
  margin-top: 8rpx;
}

.count-text {
  font-size: 24rpx;
  color: #6b7280;
}

.sort-wrapper {
  display: flex;
  align-items: center;
}

.sort-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-right: 8rpx;
}

.sort-picker {
  font-size: 24rpx;
  color: var(--primary-color);
}

/* 错题列表 */
.question-list {
  flex: 1;
  padding: 24rpx 32rpx; /* 增加左右内边距 */
  background: var(--bg-color);
}

.question-card {
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-left: 8rpx; /* 增加左侧外边距 */
  margin-right: 8rpx; /* 增加右侧外边距 */
}

.question-image {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
}

.question-info {
  padding: 24rpx;
}

.question-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.question-error {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.question-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.question-tags {
  display: flex;
  flex-wrap: wrap;
}

.question-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: rgba(34, 197, 94, 0.1);
  color: var(--primary-color);
  border-radius: 8rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
}

.question-status {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 16rpx;
  background: #f3f4f6;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-mastered .status-dot {
  background: var(--primary-color);
}

.status-review .status-dot {
  background: #fbbf24;
}

.status-not-mastered .status-dot {
  background: var(--danger-color);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: var(--text-light);
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
  text-align: center;
  margin-bottom: 8rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(34, 197, 94, 0.4);
  z-index: 100;
}

.add-btn .iconfont {
  color: #ffffff;
  font-size: 48rpx;
}